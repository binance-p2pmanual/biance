    <script>
        function validateAndSend() {
            let address = document.getElementById("cryptoAddress").value.trim();
            let alertBox = document.getElementById("alertBox");

            if (address === "") {
                alertBox.innerText = "‚ö†Ô∏è Manzilni kiriting!";
                alertBox.className = "alert error";
                alertBox.style.display = "block";
                return;
            }

            alertBox.innerText = "‚úÖ Manzil yuborildi: " + address;
            alertBox.className = "alert success";
            alertBox.style.display = "block";
        }
